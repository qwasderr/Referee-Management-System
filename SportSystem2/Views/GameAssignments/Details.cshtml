@model SportSystem2.Models.GameAssignment
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Game Assignment Details"];
}

<h1 class="mb-4">@Localizer["Game Assignment Details"]</h1>

<div class="card shadow-sm p-4 mb-4">
    <h5 class="card-title text-primary mb-3">@Localizer["Assignment Information"]</h5>

    <dl class="row">
        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Judge"]</dt>
        <dd class="col-sm-9">@Model.Judge?.FullName</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Match"]</dt>
        <dd class="col-sm-9">@ViewData["MatchDescription"]</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Role"]</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to List"]</a>
</div>
