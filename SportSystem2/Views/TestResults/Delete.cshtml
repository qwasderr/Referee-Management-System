@model SportSystem2.Models.TestResult

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete Test Result"];
}

<h1 class="mb-4 text-danger">@Localizer["Delete Test Result"]</h1>

<div class="card shadow-sm border-danger">
    <div class="card-body">
        <h5 class="card-title text-danger mb-3">@Localizer["Are you sure you want to delete this test result?"]</h5>

        <dl class="row mb-4">
            <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Judge"]</dt>
            <dd class="col-sm-9">@Model.Judge?.FullName</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Test URL"]</dt>
            <dd class="col-sm-9">@Model.Test?.TestUrl</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Score"]</dt>
            <dd class="col-sm-9">@Model.Score</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Date Taken"]</dt>
            <dd class="col-sm-9">@Model.DateTaken.ToString("g")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="TestResultId" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> @Localizer["Delete"]
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to List"]</a>
        </form>
    </div>
</div>
