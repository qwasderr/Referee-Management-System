@model SportSystem2.Models.TestResult

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit Test Result"];
}

<h1 class="mb-4">@Localizer["Edit Test Result"]</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Edit" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <input type="hidden" asp-for="TestResultId" />

        <div class="mb-3">
            <label asp-for="JudgeId" class="form-label fw-semibold">@Localizer["Judge"]</label>
            <select asp-for="JudgeId" class="form-select" asp-items="ViewBag.JudgeId"></select>
            <span asp-validation-for="JudgeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TestId" class="form-label fw-semibold">@Localizer["Test"]</label>
            <select asp-for="TestId" class="form-select" asp-items="ViewBag.TestId"></select>
            <span asp-validation-for="TestId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Score" class="form-label fw-semibold">@Localizer["Score"]</label>
            <input asp-for="Score" class="form-control" />
            <span asp-validation-for="Score" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DateTaken" class="form-label fw-semibold">@Localizer["Date Taken"]</label>
            <input asp-for="DateTaken" class="form-control" />
            <span asp-validation-for="DateTaken" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Explanation" class="form-label fw-semibold">@Localizer["Explanation"]</label>
            <textarea asp-for="Explanation" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Explanation" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">@Localizer["Save"]</button>
            <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to List"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
