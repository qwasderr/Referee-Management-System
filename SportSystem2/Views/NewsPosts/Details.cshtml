@model SportSystem2.Models.NewsPost

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["News Post Details"];
}

<h1 class="mb-5 text-primary fw-bold">@Localizer["News Post Details"]</h1>

<div class="card shadow rounded-4 border-0 mb-5" style="max-width: 900px; margin: auto;">
    @if (!string.IsNullOrEmpty(Model.PhotoPath))
    {
        <img src="@Model.PhotoPath" class="card-img-top rounded-top-4" alt="@Localizer["News Photo"]" style="object-fit: cover; height: 350px; width: 100%;" />
    }
    else
    {
        <div class="d-flex align-items-center justify-content-center bg-light rounded-top-4" style="height: 350px; color: #888;">
            <i class="bi bi-image fs-1"></i>
            <span class="ms-3 fs-4">@Localizer["No photo available"]</span>
        </div>
    }

    <div class="card-body p-5">
        <h2 class="card-title fw-bold mb-3">@Model.Title</h2>
        <p class="text-muted fst-italic mb-4">
            <i class="bi bi-calendar-event me-2"></i> @Model.CreatedAt.ToString("dddd, dd MMMM yyyy, HH:mm")
        </p>

        <hr />

        <div class="card-text fs-5" style="white-space: pre-wrap; line-height: 1.6;">
            @Model.Content
        </div>
    </div>
</div>

<div class="d-flex justify-content-center gap-3 mb-5">
    <a asp-action="Index" class="btn btn-lg btn-outline-secondary shadow-sm">
        <i class="bi bi-arrow-left-circle me-2"></i> @Localizer["Back to List"]
    </a>
</div>
