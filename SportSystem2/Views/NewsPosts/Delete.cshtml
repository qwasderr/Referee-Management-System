@model SportSystem2.Models.NewsPost

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete News Post"];
}

<h1 class="mb-4 text-danger fw-bold">@Localizer["Delete News Post"]</h1>

<div class="card shadow-lg rounded-4 p-5 mx-auto" style="max-width: 650px;">
    <div class="alert alert-warning d-flex align-items-center gap-3" role="alert">
        <i class="bi bi-exclamation-triangle-fill fs-2"></i>
        <div>
            <h5 class="mb-1">@Localizer["Are you sure you want to delete this news post?"]</h5>
            <small class="text-muted">@Localizer["This action cannot be undone."]</small>
        </div>
    </div>

    <dl class="row mt-4 mb-5">
        <dt class="col-sm-4 fw-semibold text-secondary">@Localizer["Title"]</dt>
        <dd class="col-sm-8 fs-5 text-break">@Model.Title</dd>

        <dt class="col-sm-4 fw-semibold text-secondary">@Localizer["Content"]</dt>
        <dd class="col-sm-8 fs-6 text-break" style="white-space: pre-wrap;">@Model.Content</dd>

        <dt class="col-sm-4 fw-semibold text-secondary">@Localizer["Created At"]</dt>
        <dd class="col-sm-8">@Model.CreatedAt.ToString("f")</dd>

        <dt class="col-sm-4 fw-semibold text-secondary">@Localizer["Photo"]</dt>
        <dd class="col-sm-8">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" alt="@Localizer["News Photo"]" class="img-fluid rounded shadow-sm" style="max-height: 180px; max-width: 100%;" />
            }
            else
            {
                <span class="text-muted fst-italic">@Localizer["No photo available"]</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="NewsPostId" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-lg btn-danger shadow-sm px-4">
                <i class="bi bi-trash-fill me-2"></i> @Localizer["Delete"]
            </button>
            <a asp-action="Index" class="btn btn-lg btn-outline-secondary shadow-sm px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> @Localizer["Cancel"]
            </a>
        </div>
    </form>
</div>
