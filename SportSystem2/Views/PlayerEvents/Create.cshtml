@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SportSystem2.Models.PlayerEvent

@{
    ViewData["Title"] = Localizer["Create Player Event"];
}

<h1 class="mb-4">@Localizer["Create Player Event"]</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="PlayerId" class="form-label fw-semibold">@Localizer["Player"]</label>
            <select asp-for="PlayerId" class="form-select" asp-items="ViewBag.PlayerId">
                <option disabled selected>-- @Localizer["Select player"] --</option>
            </select>
            <span asp-validation-for="PlayerId" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="MatchId" />

        <div class="mb-3">
            <label asp-for="EventType" class="form-label fw-semibold">@Localizer["Event Type"]</label>
            <select asp-for="EventType" class="form-select" asp-items="Html.GetEnumSelectList<EventType>()">
                <option disabled selected>-- @Localizer["Select event type"] --</option>
            </select>
            <span asp-validation-for="EventType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Yards" class="form-label fw-semibold">@Localizer["Yards"]</label>
            <input asp-for="Yards" class="form-control" />
            <span asp-validation-for="Yards" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Points" class="form-label fw-semibold">@Localizer["Points"]</label>
            <input asp-for="Points" class="form-control" />
            <span asp-validation-for="Points" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Minute" class="form-label fw-semibold">@Localizer["Minute"]</label>
            <input asp-for="Minute" class="form-control" />
            <span asp-validation-for="Minute" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PeriodNumber" class="form-label fw-semibold">@Localizer["Period Number"]</label>
            <input asp-for="PeriodNumber" class="form-control" />
            <span asp-validation-for="PeriodNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PeriodType" class="form-label fw-semibold">@Localizer["Period Type"]</label>
            <select asp-for="PeriodType" class="form-select" asp-items="Html.GetEnumSelectList<PeriodType>()">
                <option disabled selected>-- @Localizer["Select Period Type"] --</option>
            </select>
            <span asp-validation-for="PeriodType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label fw-semibold">@Localizer["Notes"]</label>
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success" asp-route-matchid="@ViewData["MatchId"]" asp-route-tournamentRoundId="@ViewData["TournamentRoundId"]">@Localizer["Create"]</button>
            <a asp-action="Index" asp-route-matchid="@ViewData["MatchId"]" asp-route-tournamentRoundId="@ViewData["TournamentRoundId"]" class="btn btn-outline-secondary">@Localizer["Back to List"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
