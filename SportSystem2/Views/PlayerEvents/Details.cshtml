@model SportSystem2.Models.PlayerEvent

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Player Event Details"];
}

<h1 class="mb-4">@Localizer["Player Event Details"]</h1>

<div class="card shadow-sm p-4 mb-4">
    <h5 class="card-title text-primary mb-3">@Localizer["Player Event Information"]</h5>

    <dl class="row">
        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Player"]</dt>
        <dd class="col-sm-9">@Model.Player?.FullName #@Model.Player?.Number</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Match"]</dt>
        <dd class="col-sm-9">@Model.Match?.MatchId</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Event Type"]</dt>
        <dd class="col-sm-9">@Localizer[Model.EventType.ToString()]</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Yards"]</dt>
        <dd class="col-sm-9">@Model.Yards</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Points"]</dt>
        <dd class="col-sm-9">@Model.Points</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Minute"]</dt>
        <dd class="col-sm-9">@Model.Minute</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Period Number"]</dt>
        <dd class="col-sm-9">@Model.PeriodNumber</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Period Type"]</dt>
        <dd class="col-sm-9">@Localizer[Model.PeriodType.ToString()]</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["Notes"]</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Index"
       asp-route-matchid="@ViewData["MatchId"]"
       asp-route-tournamentRoundId="@ViewData["TournamentRoundId"]"
       class="btn btn-outline-secondary">
        @Localizer["Back to List"]
    </a>
</div>
