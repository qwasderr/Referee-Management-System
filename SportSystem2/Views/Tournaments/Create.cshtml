@model SportSystem2.Models.Tournament

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Create Tournament"];
}

<h1 class="mb-4">@Localizer["Create Tournament"]</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold">@Localizer["Tournament Name"]</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Type" class="form-label fw-semibold">@Localizer["Tournament Type"]</label>
            <select asp-for="Type" class="form-select"
                    asp-items="Html.GetEnumSelectList<TournamentType>()">
                <option disabled selected>@Localizer["-- Select type --"]</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">@Localizer["Create"]</button>
            <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to List"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
