@model SportSystem2.Models.MatchAnalysis
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditMatchAnalysisTitle"];
}

<h1 class="mb-4">@Localizer["EditMatchAnalysisTitle"]</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <input type="hidden" asp-for="MatchAnalysisId" />

        <div class="mb-3">
            <label asp-for="MatchId" class="form-label fw-semibold">@Localizer["Match"]</label>
            <select asp-for="MatchId" class="form-select" asp-items="@ViewData["MatchesDescriptions"] as IEnumerable<SelectListItem>">
                <option disabled selected>@Localizer["SelectMatch"]</option>
            </select>
            <span asp-validation-for="MatchId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold">@Localizer["Title"]</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label fw-semibold">@Localizer["Content"]</label>
            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CreatedByJudgeId" class="form-label fw-semibold">@Localizer["CreatedByJudge"]</label>
            <select asp-for="CreatedByJudgeId" class="form-select" asp-items="ViewBag.CreatedByJudgeId">
                <option disabled selected>@Localizer["SelectJudge"]</option>
            </select>
            <span asp-validation-for="CreatedByJudgeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AttachmentUrl" class="form-label fw-semibold">@Localizer["AttachmentUrl"]</label>
            <input asp-for="AttachmentUrl" class="form-control" />
            <span asp-validation-for="AttachmentUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MinuteFrom" class="form-label fw-semibold">@Localizer["MinuteFrom"]</label>
            <input asp-for="MinuteFrom" type="time" step="1" class="form-control" />
            <span asp-validation-for="MinuteFrom" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MinuteTo" class="form-label fw-semibold">@Localizer["MinuteTo"]</label>
            <input asp-for="MinuteTo" type="time" step="1" class="form-control" />
            <span asp-validation-for="MinuteTo" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">@Localizer["Save"]</button>
            <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["BackToList"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
