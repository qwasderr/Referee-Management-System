@model SportSystem2.Models.Test

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TestDetails_Title"];
}

<h1 class="mb-4">@Localizer["TestDetails_Header"]</h1>

<div class="card shadow-sm p-4">
    <h5 class="card-title mb-3 text-primary">@Localizer["TestDetails_InfoHeader"]</h5>

    <dl class="row">
        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["TestDetails_Label_Title"]</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3 fw-semibold text-secondary">@Localizer["TestDetails_Label_TestUrl"]</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.TestUrl))
            {
                <a href="@Model.TestUrl" target="_blank" class="text-decoration-underline">@Model.TestUrl</a>
            }
            else
            {
                <span class="text-muted">@Localizer["TestDetails_NA"]</span>
            }
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["TestDetails_Button_BackToList"]</a>
</div>
