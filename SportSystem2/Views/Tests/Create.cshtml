@model SportSystem2.Models.Test

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateTest_Title"];
}

<h1 class="mb-4">@Localizer["CreateTest_Header"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold">@Localizer["CreateTest_Label_Title"]</label>
                <input asp-for="Title" class="form-control" placeholder="@Localizer["CreateTest_Placeholder_Title"]" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TestUrl" class="form-label fw-semibold">@Localizer["CreateTest_Label_TestUrl"]</label>
                <input asp-for="TestUrl" class="form-control" placeholder="@Localizer["CreateTest_Placeholder_TestUrl"]" />
                <span asp-validation-for="TestUrl" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary">@Localizer["CreateTest_Button_Create"]</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">@Localizer["CreateTest_Button_BackToList"]</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
