@model SportSystem2.Models.Test

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditTest_Title"];
}

<h1 class="mb-4">@Localizer["EditTest_Header"]</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Edit" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <input type="hidden" asp-for="TestId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold">@Localizer["EditTest_Label_Title"]</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TestUrl" class="form-label fw-semibold">@Localizer["EditTest_Label_TestUrl"]</label>
            <input asp-for="TestUrl" class="form-control" />
            <span asp-validation-for="TestUrl" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">@Localizer["EditTest_Button_Save"]</button>
            <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["EditTest_Button_BackToList"]</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
